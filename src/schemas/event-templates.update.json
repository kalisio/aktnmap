{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http://www.kalisio.xyz/schemas/event-templates.update.json#",
  "title": "schemas.OBJECT_NAME",
  "description": "Event Template update schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string", 
      "minLength": 1,
      "field": {
        "component": "form/KTextField",
        "label": "schemas.EVENT_TEMPLATES_NAME_FIELD_LABEL"
      }
    },
    "icon": {
      "type": "object", 
      "default": { "name": "fas fa-edit", "color": "grey" },
      "field": {
        "component": "form/KIconField",
        "label": "schemas.EVENT_TEMPLATES_ICON_FIELD_LABEL"
      }
    },
    "description": {
      "type": "string", 
      "field": {
        "component": "form/KTextareaField",
        "label": "schemas.EVENT_TEMPLATES_DESCRIPTION_FIELD_LABEL"
      }
    },
    "participants": { 
      "type": "array",
      "multiselect": true,
      "uniqueItems": true,
      "services": [{
        "service": "members",
        "field": "profile.name",
        "subfield": "email",
        "baseQuery": {
          "$select": ["_id", "email", "profile.name"]
        },
        "icon": {
          "name": "person"
        }
      },
      {
        "service": "groups",
        "field": "name",
        "baseQuery": {
          "$select": ["_id", "name"]
        },
        "icon": {
          "name": "group_work"
        }
      },
      {
        "service": "tags",
        "field": "value",
        "baseQuery": {
          "scope": "members"
        },
        "icon": {
          "name": "label"
        }
      }],
      "field": {
        "component": "form/KItemField",
        "label": "schemas.EVENTS_TEMPLATES_PARTICIPANTS_FIELD_LABEL"
      }
    },
    "coordinators": { 
      "type": "array",
      "multiselect": true,
      "uniqueItems": true,
      "services": [{
        "service": "members",
        "field": "profile.name",
        "subfield": "email",
        "baseQuery": {
          "$select": ["_id", "email", "profile.name"]
        },
        "icon": {
          "name": "person"
        } 
      },
      {
        "service": "groups",
        "field": "name",
        "baseQuery": {
          "$select": ["_id", "name"]
        },
        "icon": { 
          "name": "group_work"
        }
      },
      {
        "service": "tags",
        "field": "value",
        "baseQuery": {
          "scope": "members"
        },
        "icon": {
          "name": "label"
        }
      }],
      "field": {
        "component": "form/KItemField",
        "label": "schemas.EVENTS_TEMPLATES_COORDINATORS_FIELD_UPDATE_LABEL"
      }
    }
  },
  "required": ["name", "icon"]
}

