{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http://www.kalisio.xyz/schemas/plan-templates.create.json#",
  "title": "schemas.PLAN_TEMPLATES_CREATE_TITLE",
  "type": "object",
  "properties": {
    "name": {
      "type": "string", 
      "minLength": 2,
      "field": {
        "component": "form/KTextField",
        "label": "schemas.PLAN_TEMPLATES_NAME_FIELD_LABEL"
      }
    },
    "icon": {
      "type": "object", 
      "default": { "name": "fa-stream", "color": "primary" },
      "field": {
        "component": "form/KIconField",
        "label": "schemas.EVENT_TEMPLATES_ICON_FIELD_LABEL"
      }
    },
    "description": {
      "type": "string", 
      "field": {
        "component": "form/KTextareaField",
        "label": "schemas.PLAN_TEMPLATES_DESCRIPTION_FIELD_LABEL"
      }
    },
    "objectives": {
      "type": "array",
      "field": {
        "component": "form/KChipsField",
        "label": "schemas.PLAN_TEMPLATES_OBJECTIVES_FIELD_LABEL"
      }
    }
  },
  "required": ["name", "description"]
}

